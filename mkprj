#!/bin/bash
#ask for name and description work out the date
echo "Enter a Unique project name"
read prjnm
echo "Enter a short project description"
read prjdesc
now=`date +"%Y-%m-%d"`

mkdir /home/jammers/Project_archive/$prjnm

#change_log
echo "***********************************" >> /home/jammers/Project_archive/$prjnm/changelog.md
echo "$prjnm changelog file" >> /home/jammers/Project_archive/$prjnm/changelog.md
