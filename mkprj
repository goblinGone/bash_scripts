echo "please see the gnu licence attached or visit - https://www.gnu.org/licenses/gpl-3.0.en.html" >> /home/jammers/Project_archive/$prjnm/changelog.md
echo "project created ${now}" >> /home/jammers/Project_archive/$prjnm/changelog.md
echo "***********************************" >> /home/jammers/Project_archive/$prjnm/changelog.md
echo "format;" >> /home/jammers/Project_archive/$prjnm/changelog.md
echo "DATE YYYY-MM-DD - changes made" >> /home/jammers/Project_archive/$prjnm/changelog.md
echo "***********************************" >> /home/jammers/Project_archive/$prjnm/changelog.md

# echo "#!/bin/bash">> /home/jammers/Project_archive/$prjnm/logedit
